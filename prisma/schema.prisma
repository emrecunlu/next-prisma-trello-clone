generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(cuid())
  fullName String
  photoUrl String?
  email    String
  provider String
  boards   Board[]
  tasks    Task[]
}

model Board {
  id     String @id @default(cuid())
  title  String
  userId String
  order  Int
  user   User   @relation(fields: [userId], references: [id])
  tasks  Task[]
}

model Task {
  id          String @id @default(cuid())
  description String
  userId      String
  boardId     String
  order       Int
  user        User   @relation(fields: [userId], references: [id])
  board       Board  @relation(fields: [boardId], references: [id])
}
